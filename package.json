{
  "name": "@yashmahalwal/react-synced-state",
  "version": "1.0.0",
  "description": "A react hook to synchronise state updates",
  "main": "build/index.js",
  "scripts": {
    "docs": "snowpack dev",
    "docs:build": "snowpack build",
    "predeploy": "npm run docs:build && touch docs/.nojekyll",
    "deploy": "gh-pages -d docs",
    "build": "rm -rf build/* && tsc -p tsconfig.build.json",
    "test": "jest",
    "format": "prettier --write \\\\\\\"src/**/*.{ts,tsx}\\\\\\\" \\\\\\\"docs-source/**/*.{ts,tsx}\\\\\\\" \\\\\\\"tests/**/*.{ts,tsx}\\\\\\\"",
    "lint": "eslint --fix \\\\\\\"src/**/*.{ts,tsx}\\\\\\\" \\\\\\\"docs-source/**/*.{ts,tsx}\\\\\\\" \\\\\\\"tests/**/*.{ts,tsx}\\\\\\\"",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yashmahalwal/react-synced-state.git"
  },
  "keywords": [
    "react",
    "sync",
    "state",
    "hook",
    "react-native"
  ],
  "author": "Yash Mahalwal <yashmahalwal@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yashmahalwal/react-synced-state/issues"
  },
  "homepage": "https://github.com/yashmahalwal/react-synced-state#readme",
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mui/icons-material": "^5.2.5",
    "@mui/material": "^5.2.7",
    "@types/chance": "^1.1.3",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "chance": "^1.1.8",
    "eslint": "^8.6.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.7",
    "prettier": "^2.5.1",
    "react-dom": "^17.0.2",
    "snowpack": "^3.8.8",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  }
}
