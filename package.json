{
  "name": "@yashmahalwal/react-synced-state",
  "version": "1.0.2",
  "description": "A react hook to synchronise state updates",
  "main": "build/index.js",
  "scripts": {
    "api-docs": "typedoc",
    "postdocs:build": "npm run api-docs",
    "docs": "parcel docs-source/index.html",
    "docs:build": "parcel build docs-source/index.html --public-url='/react-synced-state'",
    "build": "rm -rf build/* && tsc -p tsconfig.build.json",
    "prepublish": "npm run build",
    "test": "jest",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"docs-source/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "lint": "eslint --fix \"src/**/*.{ts,tsx}\" \"docs-source/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yashmahalwal/react-synced-state.git"
  },
  "keywords": [
    "react",
    "sync",
    "state",
    "hook",
    "react-native"
  ],
  "author": "Yash Mahalwal <yashmahalwal@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yashmahalwal/react-synced-state/issues"
  },
  "homepage": "https://yashmahalwal.github.io/react-synced-state",
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "@mui/icons-material": "^5.8.4",
    "@mui/material": "^5.9.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.3.0",
    "@types/chance": "^1.1.3",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/react-syntax-highlighter": "^15.5.3",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@yashmahalwal/parcel-transformer-add-source-code": "file:parcel-transformer-add-source-code",
    "babel-jest": "^29.7.0",
    "chance": "^1.1.8",
    "eslint": "^8.20.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "microlight": "^0.0.7",
    "parcel": "^2.6.2",
    "prettier": "^3.1.1",
    "process": "^0.11.10",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "react-router-loading": "^1.0.0",
    "react-syntax-highlighter": "^15.5.0",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "targets": {
    "main": false,
    "default": {
      "distDir": "docs",
      "scopeHoist": false
    }
  }
}
